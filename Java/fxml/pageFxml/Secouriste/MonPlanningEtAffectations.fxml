<BorderPane fx:id="rootPane" prefHeight="642.0" prefWidth="846.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">

    <top>
        <AnchorPane prefHeight="62.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="buttonRetourPlanningAffect" layoutX="21.0" layoutY="19.0" mnemonicParsing="false" onAction="#goToPageSecouristeAcceuil" text="Retour" />
                <Label alignment="CENTER" layoutX="113.0" layoutY="14.0" prefHeight="35.0" prefWidth="375.0" text="Mon planning et mes affectations">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>

    <center>
        <AnchorPane prefHeight="580.0" prefWidth="846.0">
            <children>
                <FlowPane fx:id="calendar" hgap="10.0" layoutX="-2.0" layoutY="110.0" prefHeight="532.0" prefWidth="846.0" vgap="5.0" />

                <HBox alignment="CENTER" layoutX="163.0" layoutY="14.0" prefHeight="44.0" prefWidth="519.0" spacing="5.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#backOneWeek" text="&lt;" />
                        <Text fx:id="year" strokeType="OUTSIDE" strokeWidth="0.0" text="####">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Text>
                        <Text fx:id="month" strokeType="OUTSIDE" strokeWidth="0.0" text="####">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Text>
                        <Button mnemonicParsing="false" onAction="#forwardOneWeek" text="&gt;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" layoutY="78.0" prefHeight="44.0" prefWidth="846.0" spacing="88.75">
                    <children>
                        <Text text="Lundi" textAlignment="CENTER" />
                        <Text text="Mardi" textAlignment="CENTER" />
                        <Text text="Mercredi" textAlignment="CENTER" />
                        <Text text="Jeudi" textAlignment="CENTER" />
                        <Text text="Vendredi" textAlignment="CENTER" />
                        <Text text="Samedi" textAlignment="CENTER" />
                        <Text text="Dimanche" textAlignment="CENTER" />
                    </children>
                    <padding>
                        <Insets right="9.0" />
                    </padding>
                </HBox>
            </children>
        </AnchorPane>
