<BorderPane prefHeight="749.0" prefWidth="1133.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Controller">

    
    <top>
      <VBox BorderPane.alignment="CENTER">
         <!-- Bandeau supérieur -->
         <StackPane prefHeight="60.0">
               <children>
                  <HBox alignment="CENTER_LEFT" style="-fx-background-color: #125f7d;" spacing="10">
                     <children>
                           <!-- Bouton Retour -->
                           <Button fx:id="buttonRetourAcSec"
                                text="Retour"
                                onAction="#goToPageConnection"
                                prefHeight="30" prefWidth="80"
                                style="-fx-background-color: white; -fx-text-fill: #156082;" />
                           <Region HBox.hgrow="ALWAYS" />

                           <!-- Logo -->
                           <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@../../img/logo.png" />
                              </image>
                           </ImageView>
                     </children>
                     <padding>
                           <Insets top="10" right="10" bottom="10" left="10"/>
                     </padding>
                  </HBox>

                  <!-- Titre Centré -->
                  <Label alignment="CENTER"
                        style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"
                        text="Mon planning et Affectations">
                     <font>
                           <Font size="24.0"/>
                     </font>
                  </Label>
               </children>
         </StackPane>

         <!-- Boutons de navigation semaine -->
         <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
               <children>
                  <Button fx:id="btnPrevWeek" text="Semaine précédente"
                        style="-fx-background-color: white; -fx-text-fill: #156082;" />
                  <Button fx:id="btnNextWeek" text="Semaine suivante"
                        style="-fx-background-color: white; -fx-text-fill: #156082;" />

    
