<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane fx:controller="controller.Controller"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="435.0" prefWidth="641.0">

    <!-- Bande bleue en haut -->
    <top>
        <HBox style="-fx-background-color: #156082; -fx-padding: 10 20 10 20;" alignment="CENTER_LEFT" spacing="10">

            <!-- Bouton Retour à gauche -->
            <Button fx:id="buttonRetourAcSec"
                    text="Retour"
                    onAction="#goToPageAdminAcceuil"
                    prefHeight="30" prefWidth="80"
                    style="-fx-background-color: white; -fx-text-fill: #156082;" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- Titre centré -->
            <Label text="Création de Secouriste"
                   style="-fx-text-fill: white; -fx-font-size: 24px;"
                   maxWidth="300" alignment="CENTER" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- Logo à droite -->
            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../img/logo.png" />
                </image>
            </ImageView>

        </HBox>
    </top>

    <!-- Centre avec deux colonnes -->
    <center>
        <HBox alignment="CENTER" spacing="60" style="-fx-padding: 40 20 40 20;">

            <!-- Colonne de gauche avec GridPane -->
            <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT" >

                <Label text="Nom" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nomSec" prefWidth="250" prefHeight="30" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Date de naissance" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="dateNaissSec" prefWidth="250" prefHeight="30" promptText="AAAA-MM-JJ" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Adresse mail" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="mailSec" prefWidth="250" prefHeight="30" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Identifiant" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="idSec" prefWidth="250" prefHeight="30" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </GridPane>

            <!-- Colonne de droite avec GridPane -->
            <GridPane hgap="10" vgap="10" alignment="CENTER_LEFT" >

                <Label text="Prénom" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="prenomSec" prefWidth="250" prefHeight="30" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Adresse" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="adressSec" prefWidth="250" prefHeight="30" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Mot de passe" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="passWordSec" prefWidth="250" prefHeight="30" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <!-- Bouton sous la dernière ligne, centré sur la colonne -->
                <Button fx:id="createButtonSec"
                        text="Créer"
                        prefWidth="160" prefHeight="40"
                        style="-fx-background-color: #156082; -fx-text-fill: white;"
                        GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </GridPane>

        </HBox>
    </center>

</BorderPane>
