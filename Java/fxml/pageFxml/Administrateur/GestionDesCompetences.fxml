<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:controller="controller.Controller"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="400.0" prefWidth="600.0">

   <!-- Bande supérieure -->
   <top>
   <BorderPane prefHeight="60.0" style="-fx-background-color: #156082;" BorderPane.alignment="CENTER">

      <left>
         <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 0 15;">
         <children>
            <Button fx:id="buttonRetourAcGestComp"
                     text="Retour"
                     onAction="#goToPageAdminAcceuil"
                     style="-fx-background-color: white; -fx-text-fill: #156082;"
                     prefHeight="30" prefWidth="80" />
         </children>
         </HBox>
      </left>

      <center>
         <Label text="Gestion des Compétences"
               textFill="WHITE"
               alignment="CENTER">
         <font>
            <Font size="18.0" />
         </font>
         </Label>
      </center>

      <right>
         <HBox alignment="CENTER_RIGHT" style="-fx-padding: 0 15 0 0;">
         <children>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
               <Image url="@../../img/logo.png" />
               </image>
            </ImageView>
         </children>
         </HBox>
      </right>

   </BorderPane>
   </top>


   <!-- Contenu principal -->
   <center>
      <AnchorPane>
         <children>
            <!-- TableView -->
            <TableView fx:id="tableCompetences"
                       AnchorPane.topAnchor="20.0"
                       AnchorPane.leftAnchor="40.0"
                       AnchorPane.rightAnchor="40.0"
                       prefHeight="220.0">
               <columns>
                  <TableColumn fx:id="colSecouriste" prefWidth="180.0" text="Secouriste"/>
                  <TableColumn fx:id="colSigle" prefWidth="180.0" text="Sigle"/>
                  <TableColumn fx:id="colIntitule" prefWidth="180.0" text="Intitulé"/>
               </columns>
            </TableView>

            <!-- Boutons centrés -->
            <HBox spacing="20.0"
                  AnchorPane.bottomAnchor="20.0"
                  AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0"
                  alignment="CENTER">
               <children>
                  <Button fx:id="buttonCreateComp"
                          text="Créer"
                          onAction="#goToCreateComp"
                          prefWidth="160.0" prefHeight="40.0"
                          style="-fx-background-color: #156082; -fx-text-fill: white;" />
                  <Button fx:id="buttonUpdateComp"
                          text="Modifier"
                          onAction="#goToModifComp"
                          prefWidth="160.0" prefHeight="40.0"
                          style="-fx-background-color: #156082; -fx-text-fill: white;" />
                  <Button fx:id="buttonDeleteComp"
                          text="Supprimer"
                          onAction="#goToDeleteComp"
                          prefWidth="160.0" prefHeight="40.0"
                          style="-fx-background-color: #156082; -fx-text-fill: white;" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
