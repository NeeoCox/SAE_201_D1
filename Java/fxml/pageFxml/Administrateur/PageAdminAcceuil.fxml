    </top>

    <center>
        <GridPane hgap="20" vgap="20" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <children>
                <Button fx:id="buttonAffectSec" text="Affectation des secouristes"
                        onAction="#goToPageAffectationSecouristes" prefWidth="200" prefHeight="90"
